# Javascript linting paramters
# Original settings compiled by @ciel https://www.github.com/ciel
# Modified for use with yarn by @LilyBell https://www.github.com/LilyBell

{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true,
        "jasmine": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "no-console": 0,
        "no-dupe-keys": 1,
        "no-extra-parens": [
            1,
            "all"
        ],
        "brace-style": [
            1,
            "1tbs",
            {
                "allowSingleLine": true
            }
        ],
        "quote-props": [
            2,
            "as-needed"
        ],
        "quotes": [
            2,
            "single",
            "avoid-escape"
        ],
        "semi": [
            2,
            "always"
        ],
        "no-var": 1,
        "prefer-const": 2,
        "prefer-spread": 2
    }
}
